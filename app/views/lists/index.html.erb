<%# banner %>
<%= render 'banner' %>
<%# ********************** %>

<div class="container m-5 p-4">

  <div class="d-flex justify-content-between mb-4">
    <h2 class="mb-0">Your lists</h2>

    <%# link to new bookmark %>
    <%= link_to 'Create a list', new_list_path, class: "btn btn-success text-light rounded-pill"%>
  </div>

  <%# index of list with grid and partial (go to ) %>
  <div class="cards-lists my-3">
    <div class="row">
      <% @lists.each do |list| %>
        <div class="col-md-3">
          <%# render a partial for list card %>
          <%= render 'card_list', list: list %>
        </div>
      <% end %>
    </div>
  </div>

</div>
