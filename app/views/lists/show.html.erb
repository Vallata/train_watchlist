<div class="container my-5">

  <h1 class="text-center"><%= @list.name %></h1>

  <div class="mb-4 d-flex justify-content-between">
    <h3>Your movies</h3>
    <%# link to new bookmark %>
    <%= link_to 'Add a movie', new_list_bookmark_path(@list), class: "btn btn-success text-light rounded-pill"%>
  </div>
  <%# partial for list of bookmarks%>
  <div class="cards-bookmarks">
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-md-6">
         <%= render 'card_bookmark', bookmark: bookmark %>
        </div>
      <% end %>
    </div>
  </div>

</div>
