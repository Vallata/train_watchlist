<%= simple_form_for @list do |f| %>
    <%= f.input :name, label: "List Name", placeholder: "Please enter your list name", error: 'Name is mandatory, please specify one', input_html: { style: "border-radius: 5px; width: 300px;" } %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class:"btn btn-success rounded-pill" %>
  <% end %>
